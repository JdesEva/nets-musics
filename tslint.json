{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "linterOptions": {
    "exclude": [
      "main.js",
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "utils/electron.ts"
    ]
  },
  "rules": {
    "react-hooks-nesting": {
      "severity": "error",
      "options": {}
    }
  }
}
